# API 密钥
# ====================

# DeepSeek API 密钥
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DEEPSEEK_API_URL=https://api.deepseek.com/v1

# OpenAI API 密钥
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_API_URL=https://api.openai.com/v1


# 网络和请求设置
# ====================
REQUEST_TIMEOUT=30
RETRY_COUNT=3


# GPU和性能设置
# ====================

# 是否使用GPU
USE_GPU=true

# GPU内存限制（比例）
GPU_MEMORY_LIMIT=0.7


# TensorFlow配置
# ====================

# 启用oneDNN加速，提高CPU性能
TF_ENABLE_ONEDNN_OPTS=1

# 使用CUDA异步内存分配器，提高GPU内存管理效率
TF_GPU_ALLOCATOR=cuda_malloc_async

# 启用XLA设备，加速计算
TF_XLA_FLAGS=--tf_xla_enable_xla_devices


# 爬虫设置
# ====================

# ChromeDriver 路径
# 请将此路径替换为您系统中 ChromeDriver 的实际路径
# Windows示例: C:/path/to/chromedriver.exe
# Mac/Linux示例: /path/to/chromedriver
CHROME_DRIVER_PATH=D:/code/chromedriver-win64/chromedriver.exe


# 其他配置选项
# ====================

# 调试模式（true/false）
DEBUG_MODE=false

# 日志级别（debug/info/warning/error）
LOG_LEVEL=info